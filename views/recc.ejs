<%- include('partials/header'); -%>
<div class="container">
    <% if(!(currentUser)){ %>
    <div class="d-flex justify-content-center">
        <h3>Login and create a schedule to get personal recomendations!</h3>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary" href="/login">Login</a>
    </div>
    </br>
    <div class="d-flex justify-content-center">
        <h3>General Recomendations</h3>
    </div>
    </br>
    <% } else if(currentUser && !(currentUser.schedule.length > 0)){ %>
    <div class="d-flex justify-content-center">
        <h3>Create a schedule to get personal recomendations!</h3>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary" href="/schedule">Create Schedule</a>
    </div>
    </br>
    <div class="d-flex justify-content-center">
        <h3>General Recomendations</h3>
    </div>
    </br>
    <% } else if(typeof nextClass == "undefined"){ %>
    <h3>You have no more classes today!</h3>
    <% } else { %>
    <h3>Your next class is <%= nextClass.name %> at <%= nextClass.location %> in <%= Math.round(time/60) %> minutes.
    </h3>
    <% } %>

    <h3>Food</h3>
    <div class="row">
        <% food.forEach(function(location){ %>
        <div class="col-3">
            <h5><%= location.name %></h5>
            <img class="img-fluid" src="images/buildingpics/<%= location.images[0] %>">
            <a class="btn btn-primary" href="/map/<%= location.id %>">Get Directions</a>
        </div>
        <% }) %>
    </div>
    </br>
    <h3>Study</h3>
    <div class="row">
        <% study.forEach(function(location){ %>
        <div class="col-3">
            <h5><%= location.name %></h5>
            <img class="img-fluid" src="images/buildingpics/<%= location.images[0] %>">
            <a class="btn btn-primary" href="/map/<%= location.id %>">Get Directions</a>
        </div>
        <% }) %>
    </div>

    </br>
    <h3>Leisure</h3>
    <div class="row">
        <% leisure.forEach(function(location){ %>
        <div class="col-3">
            <h5><%= location.name %></h5>
            <img class="img-fluid" src="images/buildingpics/<%= location.images[0] %>">
            <a class="btn btn-primary" href="/map/<%= location.id %>">Get Directions</a>
        </div>
        <% }) %>
    </div>
</div>
<%- include ('partials/footer'); -%>